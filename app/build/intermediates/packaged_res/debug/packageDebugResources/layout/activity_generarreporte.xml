<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".GenerarreporteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="24dp"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GENERAR REPORTE:"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hintTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPO DE SERVICIO:"
                    android:textColor="@color/black"
                    android:visibility="visible"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/custom_edittext"
                    android:popupBackground="@color/blue"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/txt_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/numero_ticket"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="TICKET"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/txt_fecha_asignacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/calendario"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="FECHA ASIGNACION"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background"
                    android:focusable="false"
                    android:clickable="true"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/txt_fecha_reparacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/calendario"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="FECHA REPARACION"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background"
                    android:focusable="false"
                    android:clickable="true"
                    android:gravity="center_vertical" />

                android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/txt_colonia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/colonia"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="COLONIA"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/direccion"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="DIRECCION"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/txt_tipo_suelo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/tipo_suelo"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="TIPO DE SUELO"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />

                    //Etiqueta spinner tipo de suelo
                <TextView
                    android:id="@+id/TXT_tipo_suelo_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPO DE SUELO:"
                    android:textColor="@color/black"
                    android:visibility="visible"/>

                //spinner de prueba para el tipo de suelo
                <Spinner
                    android:id="@+id/spinner_tipo_suelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/custom_edittext"
                    android:popupBackground="@color/blue"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black"/>


                <EditText
                    android:id="@+id/txt_reportante"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="REPORTANTE"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/txt_tel_reportante"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/telefono"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="TELÃ‰FONO REPORTANTE"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:maxLength="10"
                    android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/txt_reparador"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:ems="10"
                    android:hint="TECNICO"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/txt_material"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/herrmienta"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:hint="MATERIAL / DESCRIPCION"
                    android:inputType="textMultiLine|textCapCharacters"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:overScrollMode="always"/>

                <!-- Etiqueta para el campo de Imagen de Evidencia -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ANTES"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/imageViewEvidencia_antes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:scaleType="centerCrop"
                    android:contentDescription="IMAGEN DE EVIDENCIA" />

                <Button
                    android:id="@+id/btn_seleccionar_imagen_antes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/material_dynamic_primary60"
                    android:text="SELECCIONAR IMAGEN"
                    android:textColor="@color/black"
                    android:minHeight="48dp"
                    android:textSize="20sp"
                    app:cornerRadius="20dp" />

                <!-- Etiqueta para el campo de Imagen de Evidencia -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DESPUES"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/imageViewEvidencia_despues"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:scaleType="centerCrop"
                    android:contentDescription="IMAGEN DE EVIDENCIA" />

                <Button
                    android:id="@+id/btn_seleccionar_imagen_despues"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/material_dynamic_primary60"
                    android:text="SELECCIONAR IMAGEN"
                    android:textColor="@color/black"
                    android:minHeight="48dp"
                    android:textSize="20sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btn_generar_reporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/material_dynamic_primary60"
                    android:minHeight="48dp"
                    android:text="GENERAR REPORTE"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="20dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
